<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <imports>
        <import resource="services/admin.xml" />
        <import resource="services/form/type.xml" />
    </imports>

    <parameters>
        <!-- GeoCoder -->
        <parameter key="geocoder.class">Geocoder\Geocoder</parameter>
        <parameter key="geocoder.provider.googlemaps.class">Geocoder\Provider\GoogleMapsProvider</parameter>
        <parameter key="geocoder.adapter.curl.class">Geocoder\HttpAdapter\CurlHttpAdapter</parameter>

        <!-- Manager -->
        <parameter key="up2green_education.manager.voucher.class">Up2green\EducationBundle\Manager\VoucherManager</parameter>
    </parameters>

    <services>
        <!-- GeoCoder -->
        <service id="geocoder" class="%geocoder.class%">
            <argument type="service" id="geocoder.provider.googlemaps" />
        </service>
        <service id="geocoder.provider.googlemaps" class="%geocoder.provider.googlemaps.class%">
            <argument type="service" id="geocoder.adapter.curl" />
        </service>
        <service id="geocoder.adapter.curl" class="%geocoder.adapter.curl.class%" />

        <!-- Manager -->
        <service id="up2green_education.manager.voucher" class="%up2green_education.manager.voucher.class%" />
    </services>

</container>
