{% extends 'Up2greenEducationBundle::layout.html.twig' %}

{% block content %}

{{ parent() }}

<div class="row-fluid">
    <div class="grey-box span4">
        <h4>{{ 'school.informations'|trans }}</h4>

        <dl class="dl-horizontal">
            <dt>{{ 'name'|trans }}</dt>
            <dd>{{ classroom.school.name }}</dd>
            <dt>{{ 'address'|trans }}</dt>
            <dd>{{ classroom.school.address }}</dd>
        </dl>
    </div>

    <div class="grey-box span8">
        <h4>{{ 'classroom.informations'|trans }}</h4>

        {% if classroom.picture is not empty %}
            <img src="{{ asset(classroom.picture) }}" alt="{{ 'classroom.picture.alt'|trans }}" />
        {% endif %}

        <dl class="dl-horizontal">
            <dt>{{ 'name'|trans }}</dt>
            <dd>{{ classroom.name }}</dd>
            <dt>{{ 'year'|trans }}</dt>
            <dd>{{ classroom.year }}</dd>
            {% if classroom.description is not empty %}
            <dt>{{ 'description'|trans }}</dt>
            <dd>{{ classroom.description }}</dd>
            {% endif %}
        </dl>

        {% if is_granted('EDIT', classroom)  %}
        <a class="btn pull-right btn-primary" href="{{ path('education_classroom_edit', { 'slug': classroom.slug, }) }}"
        {% endif %}
    </div>
</div>

<div class="grey-box">

    <h3>{{ 'pictures'|trans }}</h3>

    {% include 'Up2greenEducationBundle:ClassroomPicture:_list.html.twig' with {
        'pictures': classroom.classroomPictures
    } only %}

</div>

{% endblock %}
