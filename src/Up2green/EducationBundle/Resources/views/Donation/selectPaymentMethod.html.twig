{% extends 'Up2greenEducationBundle::layout.html.twig' %}

{% block content %}

{{ parent() }}

<div class="grey-box">
    <h2>{{ 'make.a.donation'|trans }}</h2>

    <form method="POST" {{ form_enctype(form) }} class="form-horizontal">

        <div class="error">
            {{ form_errors(form) }}
        </div>

        {{ form_row(form.method, {'label': 'form.label.payment_method'}) }}

        <div style="display: none;">
            {{ form_rest(form) }}
        </div>

        <button type="submit" class="btn btn-primary">{{ 'submit'|trans }}</button>
    </form>
</div>

{% endblock %}