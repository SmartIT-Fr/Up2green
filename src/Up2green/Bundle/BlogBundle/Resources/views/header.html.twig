<header>
    {% if active is not defined %}
        {% set active = null %}
    {% endif %}

    <div style="z-index: 5;" class="topbar-wrapper">
        <div class="topbar">
            <div class="topbar-inner">
                <div class="container">
                    <h3><a href="{{ path('homepage') }}">Mothor</a></h3>
                    <ul class="nav">
                        <li class="active"><a href="{{ path('homepage') }}">{{ 'Homepage'|trans }}</a></li>
                   </ul>
                    <ul class="nav secondary-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" href="#">{{ 'Your account'|trans }}</a>
                            <ul class="dropdown-menu">
                                {% if app.session.get('user') %}
                                    <li><a href="{{ path('fos_user_profile_edit') }}">{{ 'Profile'|trans }}</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}">{{ 'Logout'|trans }}</a></li>
                                {% else %}
                                    <li><a href="{{ path('fos_user_security_login') }}">{{ 'Login'|trans }}</a></li>
                                    <li><a href="{{ path('fos_user_registration_register') }}">{{ 'Register'|trans }}</a></li>
                                {% endif %}
                            </ul>
                        </li>
                    </ul>
                </div>
            </div><!-- /topbar-inner -->
        </div><!-- /topbar -->
    </div>
</header>
