<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="payment.plugin_controller.propel.class">Up2green\PropelPaymentCoreBundle\PluginController\PropelPluginController</parameter>
        <parameter key="payment.plugin_controller.propel.options.result_class">JMS\Payment\CoreBundle\PluginController\Result</parameter>
        <parameter key="payment.plugin_controller.propel.options.payment_class">Up2green\PropelPaymentCoreBundle\Model\Payment</parameter>
        <parameter key="payment.plugin_controller.propel.options.payment_instruction_class">Up2green\PropelPaymentCoreBundle\Model\PaymentInstruction</parameter>
        <parameter key="payment.plugin_controller.propel.options.financial_transaction_class">Up2green\PropelPaymentCoreBundle\Model\FinancialTransaction</parameter>
        <parameter key="payment.plugin_controller.propel.options.credit_class">Up2green\PropelPaymentCoreBundle\Model\Credit</parameter>
    </parameters>

    <services>
        <service id="payment.plugin_controller.propel" class="%payment.plugin_controller.propel.class%" public="false">
            <argument type="collection">
                <argument key="result_class">%payment.plugin_controller.propel.options.result_class%</argument>
                <argument key="payment_instruction_class">%payment.plugin_controller.propel.options.payment_instruction_class%</argument>
                <argument key="payment_class">%payment.plugin_controller.propel.options.payment_class%</argument>
                <argument key="financial_transaction_class">%payment.plugin_controller.propel.options.financial_transaction_class%</argument>
                <argument key="credit_class">%payment.plugin_controller.propel.options.credit_class%</argument>
            </argument>
            <argument type="service" id="event_dispatcher" />
        </service>

        <service id="payment.plugin_controller" alias="payment.plugin_controller.propel" />
    </services>

</container>