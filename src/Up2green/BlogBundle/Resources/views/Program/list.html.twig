{% extends 'Up2greenBlogBundle::layout.html.twig' %}

{% block content %}

{{ parent() }}

<div class="items">
    
    {% for program in pager.currentPageResults %}
        <div class="item">
            <h2>{{ program.title }}</h2>
            <p>{{ program.summary |raw }}</p>
            <span class="pull-right"><a href="{{ path('blog_program_show', {'id': program.id}) }}">{{ "read_more"|trans }}</a></span>
        </div>
    {% endfor %}
    
    <div class="pagerfanta">
        {{ pagerfanta(pager) }}
    </div>
    
</div>

<div style="width: 300px; float: right" id="ajax_article">
{% render 'Up2greenBlogBundle:Article:listAjax' with {
    'limit': 1, 
    'routeName': app.request.get('_route'), 
    'routeParams': app.request.get('_route_params')
} %}
</div>

{% endblock %}
