{% extends '::base.html.twig' %}

{% block stylesheets %}

<script type="text/javascript" src="{{ asset('bundles/up2greencommon/js/modernizr-2.5.3.js') }}"></script>
{% stylesheets filter='lessphp,cssrewrite,?yui_css' output='css/common_all.css'
    '@Up2greenCommonBundle/Resources/public/less/main.less'
%}
<link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
{% endstylesheets %}

{% endblock %}

{% block title %}Up2green {% block app %}Reforestation{% endblock %} : {% block section %}Index{% endblock %}{% endblock %}

{% block body %}

    {% include 'Up2greenCommonBundle::header.html.twig' %}

    <div class="content-wrapper">

        <div class="content-top"></div>

        <div id="content" role="main" class="container">
            <div id="content-inner">
                {% include ('Up2greenCommonBundle::notice.html.twig') %}
                {% block content %}{% endblock %}
            </div>
        </div>

        <div class="content-bottom">
            {% include 'Up2greenCommonBundle::footer.html.twig' %}
        </div>

    </div>

{% endblock %}

{% block javascripts %}

<!--[if lt IE 7 ]>
  <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
  <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
<![endif]-->

<script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
<script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

{% javascripts filter='?yui_js' output='js/all.js'
    '@Up2greenCommonBundle/Resources/public/js/jquery-1.7.1.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-alert.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-button.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-carousel.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-collapse.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-dropdown.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-tooltip.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-modal.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-popover.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-scrollspy.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-tab.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-transition.js'
    '@MopaBootstrapBundle/Resources/bootstrap/js/bootstrap-typeahead.js'
%}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}

<script>
    var app = {
        'domain': '{{ domain }}',
        'request': {
            '_route': '{{app.request.get('_route')}}',
            '_route_params': '{{app.request.get('_route_params') | json_encode }}'
        }
    };
</script>

{% endblock %}
